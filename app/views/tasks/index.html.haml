%h1 My Task Board

.clearfix

.tasks
  .task-header
    %h2.task-header-name
      Todo
    = link_to new_task_path,
              remote: true,
              class: 'task-header-add-icon',
              data: { :toggle => "modal", :target => "#new_task_modal" } do
      %span.glyphicon.glyphicon-plus
  .task-cards
    = render @tasks
