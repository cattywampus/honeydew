#new_task_modal.modal.fade{:tabindex => "-1", :role => "dialog", :aria => { :labelledby => "new_task_modal_label", :hidden => "true"} }
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title Hello, modal!

      = simple_form_for Task.new, wrapper: :horizontal_form, remote: true, html: { class: 'form-horizontal' } do |f|
        .modal-body
          = f.input :title
          = f.input :description

        .modal-footer
          = f.button :submit, class: 'btn btn-primary'
          %button.btn.btn-default{ :data => { :dismiss => "modal" } } Close
